// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  hashPass String
  location String
  admin    Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cart      Product[]
  orders    Order[]
  feedbacks Feedback[]
}

model Product {
  id          String   @id @default(uuid())
  image       String
  title       String
  description String
  ingredients String[]
  price       Float
  buys        Int

  User      User[]
  orders    Order[]
  feedbacks Feedback[]
}

model Order {
  id    String  @id @default(uuid())
  total Float
  issue Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User?     @relation(fields: [userId], references: [id])
  userId   String
  products Product[]
}

model Feedback {
  id      String @id @default(uuid())
  content String
  rating  Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User?    @relation(fields: [userId], references: [id])
  userId    String
  Product   Product? @relation(fields: [productId], references: [id])
  productId String?
}
